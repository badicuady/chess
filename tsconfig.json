{
    "compilerOptions": {
        "lib": [
            "DOM",
            "ES2020"
        ],
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist/",
        "rootDir": "./src",
        "baseUrl": "./src"
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "files": [
        "./src/index.ts"
    ]
}